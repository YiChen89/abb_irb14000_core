<?xml version="1.0"?>
<launch> 

    <arg name="name" default="abb_irb14000" doc="The robot name. Ensure this is the same name you give to the arm in the urdf instance."/>

    <!--  Hardware interfaces for the joints and grippers -->    
    <arg name="arms_hardware_interface" default="VelocityJointInterface"/>
    <arg name="grippers_hardware_interface" default="EffortJointInterface"/>

    <!-- URDF parameters -->
    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find abb_irb14000_description)/urdf/abb_irb14000.urdf.xacro' arms_interface:=$(arg arms_hardware_interface) grippers_interface:=$(arg grippers_hardware_interface)" />
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-urdf -model yumi -param robot_description"  respawn="false" output="screen" />

    <!-- Network parameters -->
    <!--arg name="ip" default="192.168.1.1"/--> <!--when talking to a virtual controller -->
    <arg name="ip" default="192.168.125.1"/> <!--when talking to the real robot controller -->
    <arg name="port" default="80"/>

    <!-- EGM parameters -->
    <arg name="egm" default="true"/>
    <rosparam file="$(find abb_irb14000_hw_interface)/config/egm_rws_config.yaml" command="load" ns="/yumi/yumi_hw" if="$(arg egm)"/>

    <!-- Calls to yumi_hw members -->
    <!-- The real hardware interface -->
    <node required="true" name="yumi_hw" pkg="abb_irb14000_hw_interface" type="yumi_hw_ifce_node" respawn="false" ns="/yumi" output="screen"> 
        <param name="name" value="$(arg name)" />
        <param name="ip" value="$(arg ip)"/>
        <param name="port" value="$(arg port)"/>
        <param name="use_egm" value="$(arg egm)"/>
    </node>
     
    <!-- The grippers hardware interface -->
    <node required="true" name="yumi_gripper" pkg="abb_irb14000_hw_interface" type="yumi_gripper_node" respawn="false" ns="/yumi" output="screen"> 
        <param name="ip" value="$(arg ip)"/>
    </node>


</launch>

